<% if @posts.empty? %>
  <h1>There is no posts</h1>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1"></div>
      <h1>Blogs</h1>
    </div>
  </div>
  <div class="col-sm-10 col-sm-offset-1">
    <table class="table table-hover">
      <thead>
        <th>Title</th>
        <th>Content</th>
      </thead>
      <tbody>
        <% @posts.each do |post|%>
          <tr>
          <td><%= post.title %></td>
          <td><p><%= post.content %></p></td>
          <td><%=link_to "ver post", post_path(post)%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
