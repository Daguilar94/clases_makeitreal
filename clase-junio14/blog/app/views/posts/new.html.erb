<h1> New Post </h1>

<%= form_for @post, url: user_posts_path(current_user) do |f| %>

  <div class="field">
  <%=f.label :title, "Title"%>
  <%=f.text_field :title%>
  </div>

  <div class="field">
  <%=f.label :content, "Content"%>
  <%=f.text_field :content%>
  </div>

  <%=f.submit "Create post", :disable_with => 'Creating...'%>


<%end%>
