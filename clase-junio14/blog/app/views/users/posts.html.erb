<% if @posts.empty? %>
  <h1>There is no posts</h1>
  <%=link_to "Create your first post", new_user_post_path(current_user) %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1"></div>
      <h1>Blogs</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 text-right">
      <%=link_to "Create another post", new_user_post_path(current_user), remote: true, class: "btn btn-primary create-new-post" %>
    </div>
  </div>
  <div class="col-sm-10 col-sm-offset-1">
    <table class="table table-hover">
      <thead>
        <th>Title</th>
        <th>Content</th>
      </thead>
      <tbody>
        <% @posts.each do |post|%>
          <tr>
          <td><%= post.title %></td>
          <td><p><%= post.content %></p></td>
          <td><%=link_to "ver post", user_post_path(current_user, post)%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<div>

<div class="new-form">

</div>

<script type="text/javascript">
  $(document).on('turbolinks:load', function(){
    $('.create-new-post').on('ajax:success', function(event){
      var content = event.detail[0]
      $('.new-form').append($(content))
    })
  })
</script>
